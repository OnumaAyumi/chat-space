.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name
          user-name
        %ul.side-header__box__menu 
          %li.side-header__box__menu__new-group
            = link_to "" do
              %i.fa.fa-edit{class:"edit"}
          %li.side-header__box__menu__edit-user
            = link_to "" do
              %i.fa.fa-cog{class:"cog"}
    .groups
      .group
      %p.group__group-name
        group
      %p.group__latest-content_message
        last-message

  .chat-main
    .main-header 
      .main-header__left-box
        %h2.main-header__left-box__current-group
          group
        %ul.main-header__left-box__member-list 
          member: user-name
          %li.main-header__left-box__member-list__member 
          %link_to{href: "/groups/1897/edit"}
      .main-header__edit-btn Edit

    .messages
      = render @messages
      .message_upper-info
        %p.message_upper-info__talker
        %p.message_upper-info__date
        %p.message__text
   
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'input-box__text',id: 'message_content',placeholder: 'type a message', type: "text"
        .input-box
          = f.label :image, class: 'input-box__image' do
            = fa_icon 'picture-o', class: 'fa-image'
            = f.file_field :image, class: 'input-box__image__file'
        .test
          = f.submit 'Send', class: 'submit-btn',"data-disable-with": "Send", name: "commit", type: "submit", value: "Send"